<h1>Jobs</h1>
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@q, :title, "Title", default_order: :asc) %></th>
                <th><%= sort_link(@q, :description, default_order: :asc) %></th>
                <th>Salary</th>
                <th><%= sort_link(@q, :location, default_order: :asc) %></th>
                <th><%= sort_link(@q, :company, default_order: :asc) %></th>
                <th><%= sort_link(@q, :category, default_order: :asc) %></th>
                <th colspan="2"></th>
                <th><%= link_to "Post Time", jobs_path %><span class="fa fa-caret-down"></span></th>
            </tr>
        </thead>
        <tbody>
            <% @jobs.each do |job| %>
                <tr>
                    <td><%= link_to job.title, job %></td>
                    <td><%= job.description %></td>
                    <td><span  class="label label-default"><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %></span></td>
                    <td><%= job.location %></td>
                    <td><%= job.company %></td>
                    <td><%= job.category %></td>
                    <td><%= link_to 'Edit', edit_job_path(job) %></td>
                    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <td><%= job.created_at.strftime("%D") %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="apple_pagination">
        <div class="page_info">
            <%= page_entries_info @jobs %>
        </div>
        <%= will_paginate @jobs %>
    </div>
</div>
