<div class="pull-right">
  <span class="dropdown">
    <%= link_to "#", class: "dropdown-toggle btn btn-info", data:{toggle:"dropdown"} do %>
    Sort_by
    <b class="caret"></b>
    <% end %>
    <ul class="dropdown-menu">
      <li><%= link_to "Sort by Min Wage", jobs_path(order: 'by_lower_bound') %></li>

      <li><%= link_to "Sort by Max Wage", jobs_path(order: 'by_upper_bound') %> </li>
      <li><%= link_to "Sort by Post Time", jobs_path %></li>
    </ul>
  </span>
  <%= link_to "New Job", new_job_path, class: "btn btn-primary" %>
</div>
<h1>Jobs</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="2"></th>
        <th>Post Time</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job %></td>
          <td><%= job.description %></td>
          <td><%= link_to 'Edit', edit_job_path(job) %></td>
          <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= job.created_at.strftime("%D") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
