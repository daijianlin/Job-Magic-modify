<% if flash.any? %>
    <% user_facing_flashes.each do |key, msg| %>
        <div id="notice_wrapper">
            <div class="alert alert-dismissable alert-<%= flash_class(key) %>">
                <button class="close" data-dismiss="alert">&times;</button>
                <%= msg %>
            </div>
        </div>
    <% end %>
<% end %>
